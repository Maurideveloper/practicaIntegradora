<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Cart</title>
</head>

<body>
    <h1 class="title_cart">Carrito de compras</h1>
    <div class="cart-container_cart">
        <ul class="box_product_cart">
            {{#each cart.products}}
            <li class="box_container_cart">
                <div>
                    <h2>{{this.product.title}}</h2>
                    <p>{{this.product.description}}</p>
                </div>
                <div>
                    <p>Cantidad: {{this.quantity}}</p>
                </div>
                <div>
                    <p>Precio: ${{this.product.price}}</p>
                </div>
            </li>
            {{/each }}

        </ul>

    </div>
</body>

</html>