<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Real-Time Products</title>
</head>

<body>

    <section class="forms_section">
        {{!-- Add Product --}}
        <form action="#" id="newProduct">
            <h1>Add product</h1>
            <label for="">Titulo</label>
            <input type="text" required id="title" value="ChocolateX">
            <label for="">Description</label>
            <input type="text" required id="description" value="Description">
            <label for="">Precio</label>
            <input type="number" required id="price" value="7000">
            <label for="">Imagen</label>
            <input type="text" required id="thumbnail" value="/img.png">
            <label for="">Codigo</label>
            <input type="text" required id="code" value="A321">
            <label for="">Stock</label>
            <input type="number" required id="stock" value="50">
            <label for="">Estado</label>
            <select name="" id="status">
                <option value="true" selected>True</option>
                <option value="false">False</option>
            </select>
            <label for="">Categoria</label>
            <input type="text" required id="category" value="catX">
            <button type="submit" class="btn_add">Agregar</button>
            <label for="" class="resultAdd" id="resultAdd"></label>
        </form>

        {{!-- Delete Product --}}
        <form action="##" id="deleteProduct">
            <h2>Borrar producto</h2>
            <label for="">Agregar ID</label>
            <input type="text" value="65c75cbf1f9df6645b4388d0" required id="inputNum">
            <button class="btn_del" type="submit">Borrar</button>
            <label for="" class="resultDelete" id="resultDelete"></label>
        </form>
    </section>

    {{!-- View Real-Time Products --}}
    <h2 class="title_products">Real-Time Products</h2>

    <ul class="product_box_realTime" id="realTimeProductList">

    </ul>

    <script src="/socket.io/socket.io.js"></script>
    <script src="/js/realTimeProducts.js"></script>
</body>

</html>